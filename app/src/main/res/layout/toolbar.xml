<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:layout_alignParentTop="true"
    android:background="#FDDDDDDD"
    android:contentInsetStart="0dp"
    android:contentInsetLeft="0dp"
    android:maxHeight="56dp"
    app:contentInsetLeft="0dp"
    app:contentInsetStart="0dp">


    <ImageButton
        android:id="@+id/userimageButton"
        android:layout_width="56dp"
        android:layout_height="0dp"
        android:contentDescription="@string/userbuttondesc"
        android:onClick="navopenButton"
        android:scaleType="fitCenter"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/searchView"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/user__2_"
        tools:visibility="visible" />

    <SearchView
        android:id="@+id/searchView"
        android:layout_width="298dp"
        android:layout_height="56dp"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/navimageButton"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <ImageButton
        android:id="@+id/navimageButton"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:contentDescription="@string/navbuttondesc"
        android:scaleType="fitCenter"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo"
        tools:visibility="visible" />

</androidx.constraintlayout.widget.ConstraintLayout>